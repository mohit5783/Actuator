<UserControl x:Class="Actuator.FeatureViews.SSDsModelView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:c="clr-namespace:Actuator"
			 xmlns:SSDs="clr-namespace:ComponentManager;assembly=ComponentManager"
			 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="300">
	<UserControl.Resources>
		<ControlTemplate x:Key="AutoArrangeList">
			<ScrollViewer VerticalScrollBarVisibility="Auto"
						  Background="Transparent">
				<c:ArrangePanel IsItemsHost="True"
								ItemSize="120" />
			</ScrollViewer>
		</ControlTemplate>
		<ControlTemplate x:Key="IconTemplate"
						 TargetType="{x:Type ContentControl}">
			<Grid  Width="{TemplateBinding Width}"
				   Margin="0,0,6,6"
				   Background="Transparent"
				   Height="{TemplateBinding Height}">
				<Rectangle RadiusX="4"
						   RadiusY="4"
						   Margin="3"
						   x:Name="highlight"
						   Fill="Transparent" />
				<Rectangle RadiusX="4"
						   RadiusY="4"
						   Stroke="DarkGray">
					<Rectangle.Fill>
						<LinearGradientBrush EndPoint="0.5,1"
											 StartPoint="0.5,0">
							<GradientStop Color="#3FFFFFFF" />
							<GradientStop Color="Transparent"
										  Offset="0.5" />
							<GradientStop Color="#A0000000"
										  Offset="1" />
						</LinearGradientBrush>
					</Rectangle.Fill>
				</Rectangle>
				<Viewbox Stretch="Uniform"
						 Margin="5">
					<ContentPresenter />
				</Viewbox>
				<Rectangle Fill="Transparent" />
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height=".17*" />
						<RowDefinition Height="1*" />
						<RowDefinition Height="6*" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width=".17*" />
						<ColumnDefinition Width="6.85*" />
						<ColumnDefinition Width=".17*" />
					</Grid.ColumnDefinitions>
					<Border CornerRadius="3,3,0,0"
							Opacity=".5"
							Grid.Row="1"
							Grid.Column="1">
						<Border.Background>
							<LinearGradientBrush StartPoint=".5,0"
												 EndPoint=".5,1">
								<GradientStop Color="White" />
								<GradientStop Color="White"
											  Offset=".2" />
								<GradientStop Color="Transparent"
											  Offset=".95" />
							</LinearGradientBrush>
						</Border.Background>
					</Border>
				</Grid>
			</Grid>
			<ControlTemplate.Triggers>
				<Trigger Property="IsMouseOver"
						 Value="true">
					<Setter Property="Fill"
							Value="LightGray"
							TargetName="highlight" />
				</Trigger>
				<EventTrigger RoutedEvent="MouseDown">
					<BeginStoryboard>
						<Storyboard>
							<ColorAnimation To="Gray"
											Duration="0:0:0.050"
											Storyboard.TargetName="highlight"
											Storyboard.TargetProperty="Fill.Color" />
							<ColorAnimationUsingKeyFrames Storyboard.TargetName="highlight"
														  Storyboard.TargetProperty="Fill.Color">
								<DiscreteColorKeyFrame Value="Gray"
													   KeyTime="0:0:0" />
							</ColorAnimationUsingKeyFrames>
						</Storyboard>
					</BeginStoryboard>
				</EventTrigger>
				<EventTrigger RoutedEvent="MouseUp">
					<BeginStoryboard>
						<Storyboard>
							<ColorAnimation To="LightGray"
											Duration="0:0:0.100"
											Storyboard.TargetName="highlight"
											Storyboard.TargetProperty="Fill.Color" />
							<ColorAnimationUsingKeyFrames Storyboard.TargetName="highlight"
														  Storyboard.TargetProperty="Fill.Color">
								<DiscreteColorKeyFrame Value="LightGray"
													   KeyTime="0:0:0" />
							</ColorAnimationUsingKeyFrames>
						</Storyboard>
					</BeginStoryboard>
				</EventTrigger>
			</ControlTemplate.Triggers>
		</ControlTemplate>
		<DataTemplate DataType="{x:Type SSDs:ClsComponent}">
			<ContentControl Template="{StaticResource IconTemplate}" >
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="5" />
						<RowDefinition />
						<RowDefinition Height="auto" />
					</Grid.RowDefinitions>
					<Image Source="../img/MenuAction/SSDs.png"
						   Grid.Row="1"
						   MaxHeight="64"
						   Stretch="Uniform"
						   x:Name="image"
						   Margin="10,2,10,2" />
					<StackPanel Grid.Row="2">
						<TextBlock Text="{Binding ComponentName}"
								   FontWeight="SemiBold"
								   HorizontalAlignment="Center"
								   Margin="4,0,4,2" />
						<TextBlock Text="{Binding ComponentIP}"
								   FontWeight="SemiBold"
								   HorizontalAlignment="Center"
								   Margin="4,0,4,2" />
					</StackPanel>
				</Grid>
			</ContentControl>
		</DataTemplate>
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="32" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid>
			<TextBlock Text="View SSDs"
					   VerticalAlignment="Center"
					   Margin="5"
					   FontWeight="SemiBold"
					   FontSize="16" />
		</Grid>
