                          Width="250"
                          VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0"
                              Background="Black">
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="5"
                                    Height="20"
                                    Width="20"
                                    Name="btnClose1"
                                    Click="btnClose1_Click">
                                <materialDesign:PackIcon Kind="Close" />
                            </Button>
                            <TextBlock Text="Choose Types"
                                       HorizontalAlignment="Center"
                                       Background="Black"
                                       FontWeight="SemiBold"
                                       FontSize="15"
                                       Padding="7"
                                       Foreground="White"
                                       TextAlignment="Center"
                                       Margin="5" />
                        </Grid>
                        <StackPanel Orientation="Vertical"
                                    Grid.Row="1"
                                    Margin="5">
                            <TextBlock Text="Name your Workflow Action"
                                       Margin="5,10,0,0"
                                       FontWeight="Bold" />
                            <TextBox Name="TxtWorkflowActionName"
                                     Margin="5" />
                            <TextBlock Text="Type"
                                       Margin="5,10,0,0"
                                       FontWeight="Bold" />
                            <ComboBox Name="cmbDeviceSOADate"
                                      ItemsSource="{Binding AllDevices}"
                                      DisplayMemberPath="DeviceName"
                                      Margin="5" />
                        </StackPanel>
                        <Button Content="NEXT"
                                FontSize="14"
                                Name="VariableNameChoosen"
                                Click="VariableNameChoosen_Click"
                                Grid.Row="2"
                                Margin="5"
                                Height="30" />
                    </Grid>
                </materialDesign:Card>
            </Grid>
            <Grid Name="GrdTypeValue"
                  Visibility="Collapsed"
